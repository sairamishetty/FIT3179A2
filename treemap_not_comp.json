{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A treemap showing energy sources.",
  "width": 500,
  "height": 300,
  "padding": 5,

  "data": [
    {
      "name": "tree",
      "url": "https://raw.githubusercontent.com/sairamishetty/FIT3179A2/main/dummy.csv", 
      "format": {"type": "json"},
      "transform": [
        {
          "type": "stratify",
          "key": "id",
          "parentKey": "parent"
        },
        {
          "type": "treemap",
          "field": "value",
          "sort": {"field": "value", "order": "descending"},
          "size": [{"signal": "width"}, {"signal": "height"}],
          "padding": 1
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "tree", "field": "id"},
      "range": {"scheme": "category20"}
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "x": {"field": "x0"},
          "y": {"field": "y0"},
          "x2": {"field": "x1"},
          "y2": {"field": "y1"},
          "fill": {"scale": "color", "field": "id"},
          "stroke": {"value": "white"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "tree"},
      "encode": {
        "enter": {
          "x": {"signal": "(datum.x0 + datum.x1) / 2"},
          "y": {"signal": "(datum.y0 + datum.y1) / 2"},
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "text": {"field": "name"}, 
          "fill": {"value": "black"}
        }
      }
    }
  ]
}
